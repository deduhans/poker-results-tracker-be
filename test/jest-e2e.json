{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1",
    "^@test/(.*)$": "<rootDir>/$1",
    "^@entities/(.*)$": "<rootDir>/../src/typeorm/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1"
  }
}